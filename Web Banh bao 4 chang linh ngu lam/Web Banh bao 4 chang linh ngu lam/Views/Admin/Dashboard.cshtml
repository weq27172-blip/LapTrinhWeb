@model Web_Banh_bao_4_chang_linh_ngu_lam.Models.AdminDashboardVM
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Bảng điều khiển quản trị";
}

<div class="container py-4">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Bảng điều khiển quản trị</h2>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-primary">
                <i class="fa fa-box"></i> Quản lý sản phẩm
            </a>
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-success">
                <i class="fa fa-shopping-cart"></i> Quản lý đơn hàng
            </a>
            <a href="@Url.Action("Discount", "Admin")" class="btn btn-outline-warning">
                <i class="fa fa-tags"></i> Quản lý mã giảm giá
            </a>
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-danger">
                <i class="fa fa-sign-out-alt"></i> Đăng xuất
            </a>
        </div>
    </div>

    <!-- STAT CARDS -->
    <div class="row text-center mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Tổng sản phẩm</h6>
                    <h3 class="text-success">@Model.TotalProduct</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Tổng đơn hàng</h6>
                    <h3 class="text-info">@Model.TotalOrder</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Khách hàng</h6>
                    <h3 class="text-warning">@Model.TotalCustomer</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Doanh thu</h6>
                    <h3 class="text-danger">@Model.TotalRevenue.ToString("N0") VND</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- PROFIT AND BEST-SELLING -->
    <div class="row text-center mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Doanh thu hôm nay</h6>
                    <h3 class="text-primary">@Model.ProfitToday.ToString("N0") VND</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Doanh thu tháng này</h6>
                    <h3 class="text-success">@Model.ProfitThisMonth.ToString("N0") VND</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Ngày bán chạy nhất</h6>
                    <h4 class="text-danger">@Model.BestSellingDay</h4>
                    <p>Số lượng bán: @Model.BestSellingDayQuantity</p>
                </div>
            </div>
        </div>
    </div>

    <!-- TOP PRODUCTS -->
    <h4 class="mt-5 mb-3 text-center text-dark">Top 5 sản phẩm bán chạy</h4>
    @if (Model.TopProducts != null && Model.TopProducts.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered text-center shadow-sm">
                <thead class="table-warning">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng bán</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TopProducts)
                    {
                        <tr>
                            <td>@item.Product</td>
                            <td>@item.TotalQty</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center text-muted">Chưa có dữ liệu bán hàng.</p>
    }
</div>