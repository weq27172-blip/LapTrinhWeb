@model Web_Banh_bao_4_chang_linh_ngu_lam.Models.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

    // LẤY LIST REVIEW TỪ CONTROLLER
    var reviews = ViewBag.Reviews as List<Web_Banh_bao_4_chang_linh_ngu_lam.Models.Review>;

    double avgRating = 0;
    if (reviews != null && reviews.Count > 0)
    {
        avgRating = reviews.Average(r => r.Rating);
    }
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/Content/Images/" + (string.IsNullOrEmpty(Model.ImagePro) ? "noimage.jpg" : Model.ImagePro))"
                 class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-6">
            <h2>@Model.NamePro</h2>
            <p class="text-muted">@Model.DescriptionPro</p>
            <h4 class="text-danger">@Model.Price.ToString("N0") VND</h4>

            <p class="mt-2">
                ⭐ <strong>@avgRating.ToString("0.0")</strong> / 5
                <small class="text-muted">(@(reviews?.Count ?? 0) lượt đánh giá)</small>
            </p>

            <p class="mt-3">
                <a class="btn btn-primary" href="@Url.Action("AddToCart","ShoppingCart", new { id = Model.ProductID })">
                    <i class="fa fa-cart-plus"></i> Thêm vào giỏ hàng
                </a>
            </p>
        </div>
    </div>
    <hr />
    <div class="row mt-4">
        <div class="col-md-8">

            <h4>Gửi đánh giá của bạn</h4>

            @using (Html.BeginForm("AddReview", "Product", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("productId", Model.ProductID)

                <div class="mb-3">
                    <label class="form-label">Tên của bạn</label>
                    <input type="text" name="userName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Chọn số sao:</label>
                    <select name="rating" class="form-control" required>
                        <option value="5">5 sao</option>
                        <option value="4">4 sao</option>
                        <option value="3">3 sao</option>
                        <option value="2">2 sao</option>
                        <option value="1">1 sao</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nhận xét</label>
                    <textarea name="comment" class="form-control" rows="3" required></textarea>
                </div>

                <button type="submit" class="btn btn-success">Gửi đánh giá</button>
            }
            <hr />
            <h4>Đánh giá gần đây</h4>

            @if (ViewBag.Reviews == null || ((List<Web_Banh_bao_4_chang_linh_ngu_lam.Models.Review>)ViewBag.Reviews).Count == 0)
            {
                <p class="text-muted">Chưa có đánh giá nào.</p>
            }
            else
            {
                foreach (var r in ViewBag.Reviews)
                {
                    <div class="card p-3 mb-2 shadow-sm">
                        <strong>Số sao: @r.Rating ⭐</strong>
                        <p>@r.Comment</p>
                        <small class="text-muted">@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                }
            }

           

        </div>
    </div>
</div>