<script>
    function toggleMap(mapId, button) {
        var mapElement = document.getElementById(mapId);
        var allMaps = document.querySelectorAll('.collapse');
        var allButtons = document.querySelectorAll('footer .location-btn');

        // Close other maps
        allMaps.forEach(function (map) {
            if (map.id !== mapId && map.classList.contains('show')) {
                var bsCollapse = new bootstrap.Collapse(map, { toggle: false });
                bsCollapse.hide();
            }
        });

        // Reset all buttons to outline style
        allButtons.forEach(function (btn) {
            if (btn !== button) {
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-outline-primary');
                var span = btn.querySelector('span');
                var icon = btn.querySelector('i');
                if (span) {
                    var branchName = span.textContent.includes('Hóc Môn') ? 'Chi nhánh Hóc Môn' : 'Chi nhánh Quận 12';
                    span.textContent = branchName;
                }
                if (icon) icon.className = 'bi bi-geo-alt-fill';
            }
        });

        // nut de hien map
        var bsCollapse = new bootstrap.Collapse(mapElement, { toggle: true });

        var span = button.querySelector('span');
        var icon = button.querySelector('i');

        // Handle khi map hien ra
        mapElement.addEventListener('shown.bs.collapse', function () {
            button.classList.remove('btn-outline-primary');
            button.classList.add('btn-primary');
            if (span) span.textContent = 'Ẩn bản đồ';
            if (icon) icon.className = 'bi bi-x-circle-fill';
        }, { once: true });

        // Handle khi An Map Di
        mapElement.addEventListener('hidden.bs.collapse', function () {
            button.classList.remove('btn-primary');
            button.classList.add('btn-outline-primary');
            if (span) {
                var branchName = mapId === 'mapHocMon' ? 'Chi nhánh Hóc Môn' : 'Chi nhánh Quận 12';
                span.textContent = branchName;
            }
            if (icon) icon.className = 'bi bi-geo-alt-fill';
        }, { once: true });
    }
</script>