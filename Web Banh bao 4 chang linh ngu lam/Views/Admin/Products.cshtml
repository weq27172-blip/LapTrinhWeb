@model List<Web_Banh_bao_4_chang_linh_ngu_lam.Models.Product>

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Quản lý sản phẩm";
}

<div class="container py-4">
    <h2 class="mb-4">Danh sách sản phẩm</h2>
    <a href="@Url.Action("CreateProduct","Admin")" class="btn btn-success mb-3">+ Thêm sản phẩm</a>

    <table class="table table-bordered text-center">
        <thead class="table-warning">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Ảnh</th>
                <th>Loại</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr class="@(p.IsDeleted ? "table-danger" : "")">

                    <td>@p.ProductID</td>
                    <td>@p.NamePro</td>
                    <td>@p.Price.ToString("N0")</td>
                    <td><img src="~/Content/Images/@p.ImagePro" width="70" /></td>
                    <td>@p.Category</td>

                    <td>
                        @if (p.IsDeleted)
                        {
                            <span class="text-danger">Đã xóa</span>
                        }
                        else
                        {
                            <span class="text-success">Đang bán</span>
                        }
                    </td>

                    <td>
                        @if (!p.IsDeleted)
                        {
                            <a href="@Url.Action("EditProduct","Admin", new { id = p.ProductID })" class="btn btn-sm btn-primary">Sửa</a>
                            <a href="@Url.Action("DeleteProduct","Admin", new { id = p.ProductID })" class="btn btn-sm btn-danger" onclick="return confirm('Xóa sản phẩm này?')">Xóa</a>
                        }
                        else
                        {
                            <a href="@Url.Action("RestoreProduct","Admin", new { id = p.ProductID })" class="btn btn-sm btn-warning">Khôi phục</a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>