@model Web_Banh_bao_4_chang_linh_ngu_lam.Models.AdminDashboardVM
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Bảng điều khiển quản trị";
}

<div class="container-fluid py-4">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ff7b00;">Bảng điều khiển quản trị</h2>
            <p class="text-muted mb-0">Tổng quan hoạt động kinh doanh</p>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-primary">
                <i class="fa fa-box"></i> Sản phẩm
            </a>
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-success">
                <i class="fa fa-shopping-cart"></i> Đơn hàng
            </a>
            <a href="@Url.Action("Discount", "Admin")" class="btn btn-outline-warning">
                <i class="fa fa-tags"></i> Giảm giá
            </a>
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-danger">
                <i class="fa fa-sign-out-alt"></i> Đăng xuất
            </a>
        </div>
    </div>

    <!-- STAT CARDS -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Tổng sản phẩm</h6>
                    <h2 class="mb-1 fw-bold text-primary">@Model.TotalProduct</h2>
                    <small class="text-muted">sản phẩm đang bán</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Tổng đơn hàng</h6>
                    <h2 class="mb-1 fw-bold text-info">@Model.TotalOrder</h2>
                    <small class="text-muted">đơn đã đặt</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Khách hàng</h6>
                    <h2 class="mb-1 fw-bold text-warning">@Model.TotalCustomer</h2>
                    <small class="text-muted">người đã mua</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Tổng doanh thu</h6>
                    <h2 class="mb-1 fw-bold text-danger">@((Model.TotalRevenue / 1000000).ToString("N1"))M</h2>
                    <small class="text-muted">@Model.TotalRevenue.ToString("N0") VND</small>
                </div>
            </div>
        </div>
    </div>

    <!-- REVENUE CARDS -->
    <div class="row mb-4">
        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Doanh thu hôm nay</h6>
                    <h3 class="mb-2" style="color: #ff7b00;">@Model.ProfitToday.ToString("N0") ₫</h3>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar" style="width: @((Model.ProfitToday * 100 / (Model.ProfitThisMonth == 0 ? 1 : Model.ProfitThisMonth)))%; background: #ff7b00;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Doanh thu tháng này</h6>
                    <h3 class="mb-2 text-success">@Model.ProfitThisMonth.ToString("N0") ₫</h3>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" style="width: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Ngày bán chạy nhất</h6>
                    <h4 class="mb-1 text-danger">@Model.BestSellingDay</h4>
                    <small class="text-muted">@Model.BestSellingDayQuantity sản phẩm</small>
                </div>
            </div>
        </div>
    </div>

    <!-- CHARTS ROW -->
    <div class="row mb-4">
        <!-- TOP PRODUCTS CHART -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0" style="color: #ff7b00;">Top 5 sản phẩm bán chạy</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopProducts != null && Model.TopProducts.Any())
                    {
                        <canvas id="topProductsChart" height="80"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-muted py-5">Chưa có dữ liệu bán hàng.</p>
                    }
                </div>
            </div>
        </div>

        <!-- REVENUE BREAKDOWN -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0" style="color: #ff7b00;">Phân bổ doanh thu</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart"></canvas>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Hôm nay</span>
                            <span class="fw-bold" style="color: #ff7b00;">@((Model.ProfitToday * 100 / (Model.ProfitThisMonth == 0 ? 1 : Model.ProfitThisMonth)).ToString("N1"))%</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Tháng này</span>
                            <span class="fw-bold text-success">100%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TOP PRODUCTS TABLE -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 pt-4">
            <h5 class="mb-0" style="color: #ff7b00;">Bảng xếp hạng sản phẩm</h5>
        </div>
        <div class="card-body">
            @if (Model.TopProducts != null && Model.TopProducts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead style="background: #fff8f0;">
                            <tr>
                                <th class="border-0">Hạng</th>
                                <th class="border-0">Tên sản phẩm</th>
                                <th class="border-0 text-center">Số lượng bán</th>
                                <th class="border-0 text-end">Tỷ trọng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                                int totalQty = Model.TopProducts.Sum(x => x.TotalQty);
                            }
                            @foreach (var item in Model.TopProducts)
                            {
                                <tr>
                                    <td>
                                        @if (rank == 1)
                                        {
                                            <span class="badge" style="background: gold; color: #000;"><i class="fas fa-crown"></i> #@rank</span>
                                        }
                                        else if (rank == 2)
                                        {
                                            <span class="badge" style="background: silver; color: #000;"><i class="fas fa-medal"></i> #@rank</span>
                                        }
                                        else if (rank == 3)
                                        {
                                            <span class="badge" style="background: #cd7f32; color: #fff;"><i class="fas fa-medal"></i> #@rank</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">#@rank</span>
                                        }
                                    </td>
                                    <td class="fw-bold">@item.Product</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@item.TotalQty</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-flex align-items-center justify-content-end">
                                            <div class="progress me-2" style="width: 100px; height: 8px;">
                                                <div class="progress-bar" style="width: @((item.TotalQty * 100.0 / totalQty))%; background: #ff7b00;"></div>
                                            </div>
                                            <span class="text-muted small">@((item.TotalQty * 100.0 / totalQty).ToString("N1"))%</span>
                                        </div>
                                    </td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-muted py-5">Chưa có dữ liệu bán hàng.</p>
            }
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: #fff8f0;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Top Products Bar Chart
        @if (Model.TopProducts != null && Model.TopProducts.Any())
        {
            <text>
            var ctx1 = document.getElementById('topProductsChart').getContext('2d');
            var topProductsChart = new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.TopProducts.Select(x => "'" + x.Product + "'")))],
                    datasets: [{
                        label: 'Số lượng bán',
                        data: [@string.Join(",", Model.TopProducts.Select(x => x.TotalQty))],
                        backgroundColor: [
                            'rgba(255, 123, 0, 0.8)',
                            'rgba(255, 153, 51, 0.8)',
                            'rgba(255, 183, 102, 0.8)',
                            'rgba(255, 204, 153, 0.8)',
                            'rgba(255, 224, 204, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255, 123, 0, 1)',
                            'rgba(255, 153, 51, 1)',
                            'rgba(255, 183, 102, 1)',
                            'rgba(255, 204, 153, 1)',
                            'rgba(255, 224, 204, 1)'
                        ],
                        borderWidth: 2,
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });

            // Revenue Pie Chart
            var ctx2 = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Hôm nay', 'Còn lại trong tháng'],
                    datasets: [{
                        data: [@Model.ProfitToday, @(Model.ProfitThisMonth - Model.ProfitToday)],
                        backgroundColor: [
                            'rgba(255, 123, 0, 0.8)',
                            'rgba(40, 167, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255, 123, 0, 1)',
                            'rgba(40, 167, 69, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            </text>
        }
    </script>
}