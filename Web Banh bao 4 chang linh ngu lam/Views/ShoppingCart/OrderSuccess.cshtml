@model Web_Banh_bao_4_chang_linh_ngu_lam.Models.OrderPro
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Đặt hàng thành công";

    // Calculate discount info from related MaGiamGia
    var discount = Model.MaGiamGia;
    var hasDiscount = discount != null && discount.IsActive == true;
    var discountCode = hasDiscount ? discount.Code : null;

    // Calculate discount amount
    decimal discountAmount = 0;
    if (hasDiscount && discount.Type == 2 && discount.PercentOff.HasValue)
    {
        discountAmount = (Model.SubTotal ?? 0) * discount.PercentOff.Value / 100;
    }
}

<div class="container py-5" style="background:#fff6ee;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <!-- Success Icon -->
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>

                    <h2 class="text-success mb-3">Đặt hàng thành công!</h2>
                    <p class="text-muted mb-4">Cảm ơn bạn đã đặt hàng. Chúng tôi sẽ liên hệ với bạn sớm nhất.</p>

                    <!-- Order Info Card -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="row text-start">
                                <div class="col-md-6 mb-3">
                                    <strong><i class="fas fa-receipt"></i> Mã đơn hàng:</strong>
                                    <p class="mb-0 text-primary fw-bold">#@Model.ID</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong><i class="fas fa-calendar"></i> Ngày đặt:</strong>
                                    <p class="mb-0">@(Model.DateOrder.HasValue ? Model.DateOrder.Value.ToString("dd/MM/yyyy HH:mm") : "")</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong><i class="fas fa-credit-card"></i> Phương thức thanh toán:</strong>
                                    <p class="mb-0">@Model.PaymentMethod</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong><i class="fas fa-info-circle"></i> Trạng thái:</strong>
                                    <p class="mb-0"><span class="badge bg-warning">@Model.Status</span></p>
                                </div>
                                <div class="col-12 mb-3">
                                    <strong><i class="fas fa-map-marker-alt"></i> Địa chỉ giao hàng:</strong>
                                    <p class="mb-0">@Model.DeliveryAddress</p>
                                    @if (!string.IsNullOrEmpty(Model.Province))
                                    {
                                        <p class="mb-0 text-muted"><small>Tỉnh/Thành phố: @Model.Province</small></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Items Table -->
                    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                    {
                        <div class="card border-0 mb-4">
                            <div class="card-body">
                                <h6 class="text-start mb-3 fw-bold">Sản phẩm đã đặt</h6>
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th class="text-center">SL</th>
                                            <th class="text-end">Đơn giá</th>
                                            <th class="text-end">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderDetails)
                                        {
                                            var product = item.Product;
                                            var qty = item.Quantity ?? 0;
                                            var price = item.UnitPrice ?? 0;
                                            var total = qty * price;
                                            bool isFree = price == 0;

                                            <tr class="@(isFree ? "table-success" : "")">
                                                <td>
                                                    @(product?.NamePro ?? "Không rõ")
                                                    @if (isFree)
                                                    {
                                                        <span class="badge bg-success ms-1">🎁 Tặng</span>
                                                    }
                                                </td>
                                                <td class="text-center">@qty</td>
                                                <td class="text-end">
                                                    @if (isFree)
                                                    {
                                                        <span class="text-success fw-bold">FREE</span>
                                                    }
                                                    else
                                                    {
                                                        @price.ToString("N0") <text>VND</text>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (isFree)
                                                    {
                                                        <span class="text-success fw-bold">0 VND</span>
                                                    }
                                                    else
                                                    {
                                                        @total.ToString("N0") <text>VND</text>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    <!-- Payment Breakdown -->
                    <div class="card border-0 mb-4" style="background: #fff8f0;">
                        <div class="card-body">
                            <h6 class="text-start mb-3 fw-bold" style="color: #ff7b00;">Chi tiết thanh toán</h6>

                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span>@(Model.SubTotal.HasValue ? Model.SubTotal.Value.ToString("N0") : "0") VND</span>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <span>
                                    Phí vận chuyển
                                    @if (!string.IsNullOrEmpty(Model.Province))
                                    {
                                        <small class="text-muted">(@Model.Province)</small>
                                    }:
                                </span>
                                <span>
                                    @if (Model.ShippingFee == 0)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-shipping-fast"></i> Miễn phí
                                        </span>
                                    }
                                    else
                                    {
                                        <span>@(Model.ShippingFee.HasValue ? Model.ShippingFee.Value.ToString("N0") : "0") VND</span>
                                    }
                                </span>
                            </div>

                            @if (hasDiscount && discountAmount > 0)
                            {
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>
                                        Giảm giá @discount.PercentOff%
                                        @if (!string.IsNullOrEmpty(discountCode))
                                        {
                                            <small>(@discountCode)</small>
                                        }:
                                    </span>
                                    <span class="fw-bold">-@discountAmount.ToString("N0") VND</span>
                                </div>
                            }

                            @if (hasDiscount && discount.Type == 1)
                            {
                                <div class="alert alert-success p-2 mb-2">
                                    <small>
                                        <i class="fas fa-gift"></i>
                                        <strong>Ưu đãi:</strong> Mua @discount.BuyQuantity tặng @discount.FreeQuantity sản phẩm
                                    </small>
                                </div>
                            }

                            <hr style="border-top: 2px dashed #ffd9b3;" />

                            <div class="d-flex justify-content-between fw-bold fs-5" style="color: #ff7b00;">
                                <span>Tổng thanh toán:</span>
                                <span>@(Model.TotalAmount.HasValue ? Model.TotalAmount.Value.ToString("N0") : "0") VND</span>
                            </div>
                        </div>
                    </div>

                    <!-- Special Note for Free Shipping -->
                    @if (Model.Province == "TPHCM" && Model.ShippingFee == 0)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-gift"></i> <strong>Ưu đãi đặc biệt!</strong>
                            Bạn được miễn phí vận chuyển trong khu vực TP. Hồ Chí Minh
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 justify-content-center mt-4 flex-wrap">
                        <a href="@Url.Action("Index","Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        <a href="@Url.Action("Index","Product")" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-bag"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>